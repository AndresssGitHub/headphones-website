---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-100">
		<div class="bg-white h-16 flex items-center">
			<header class="flex justify-between container max-w-6xl mx-auto">
				<h1> <span class="font-bold text-blue-700">H</span>.<span>Phone</span></h1>
				<menu class="space-x-4">
					<ul class="space-x-5">
						<li class="inline"><a href="#" class="text-blue-700 border-b-2 border-blue-700 border-dotted">Menu</a></li>
						<li class="inline hover:text-blue-700"><a href="#">Shop</a></li>
						<li class="inline hover:text-blue-700"><a href="#">Product</a></li>
						<li class="inline hover:text-blue-700"><a href="#">Blog</a></li>
						<li class="inline hover:text-blue-700"><a href="#">Contact</a></li>
					</ul>
				</menu>
				<div class="flex space-x-4 items-center">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
					  </svg>

					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
					</svg>

					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
					</svg>  
				</div>
			</header>
		</div>
		
		<div class="bg-white rounded-xl shadow-slate-200 mt-6 max-w-6xl container mx-auto p-5">
			<div class="grid grid-cols-2 mt-4">
				<div class="bg-red-500 w-64 h-64 bg-[url(https://as-images.apple.com/is/MME73_AV2?wid=1000&hei=1000&fmt=jpeg&qlt=95&.v=1632861338000)] bg-[length:140%_140%] bg-center mx-auto">
				</div>
				<div>
					<span class="font-semibold text-sm bg-slate-300 rounded-full px-3 pb-1">new</span>
					<h1 class="text-3xl font-semibold mt-3">Apple Airpods</h1>
					<span class="bg-gradient-to-r from-blue-600 to-blue-400 text-white rounded-md px-3 py-1 mt-4 inline-block">
						3rd Generation
					</span>
					<div class="flex text-sm mt-6 text-gray-600">
						<span class="bg-blue-50 w-3 rounded-full inline-block"></span>
						<p class="w-3/5">Tailwind CSS works by scanning all of your HTML files, JavaScript components, and any other templates for class names, generating the corresponding styles and then writing them to a static CSS file.</p>
					</div>
				</div>
			</div>
			<div class="shadow-md shadow-slate-100 h-12 flex justify-between items-center">
				<div class="text-sm text-gray-400 px-6">
					<span class="text-blue-600 font-semibold">Wireless Earbuds</span> with Lighning Charging Case. Spatial Audio
				</div>
				<div class="flex space-x-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 bg-slate-100 p-1 rounded">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
					</svg>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 bg-slate-100 p-1 rounded">
						<path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
					</svg> 
				</div>
			</div>
		</div>
		<div class="mt-12 container max-w-6xl mx-auto grid grid-cols-4 gap-6">
			<div class="bg-white shadow shadow-slate-200 rounded-lg p-4">
				<div class="h-48 w-48 bg-[url('https://m.media-amazon.com/images/I/61WnTqb1MrL.jpg')] bg-center bg-[length:100%_100%] mx-auto"></div>
				<p class="text-blue-600 font-semibold bg-slate-100 text-center py-1 rounded-lg">3rd Generation</p>
			</div>
			<div class="bg-white shadow shadow-slate-200 rounded-lg p-4">
				<div class="h-48 w-48 bg-[url('https://tiendasishop.com/media/catalog/product/m/v/mv7n2lz_a_1.jpg')] bg-center bg-[length:100%_100%] mx-auto"></div>
				<p class="text-blue-600 font-semibold bg-slate-100 text-center py-1 rounded-lg">2nd Generation</p>
			</div>
			<div class="bg-white shadow shadow-slate-200 rounded-lg p-4">
				<div class="h-48 w-48 bg-[url('https://tiendasishop.com/media/catalog/product/m/g/mgyj3am_a.jpg')] bg-center bg-[length:100%_100%] mx-auto"></div>
				<p class="text-blue-600 font-semibold bg-slate-100 text-center py-1 rounded-lg">AirPods Max</p>
			</div>
			<div class="bg-white shadow shadow-slate-200 rounded-lg p-4">
				<div class="h-48 w-48 bg-[url('https://tiendasishop.com/media/catalog/product/8/1/81jkkfdbxjl._ac_sl1500_2048x.jpg')] bg-center bg-[length:100%_100%] mx-auto"></div>
				<p class="text-blue-600 font-semibold bg-slate-100 text-center py-1 rounded-lg">AirPods Max Blue</p>
			</div>
		</div>
		<div class="flex justify-center mt-12">
			<h1 class="font-bold text-2xl"><span class="text-blue-600">Newest</span> Product</h1>
		</div>
		<div class="flex justify-center mb-12 text-sm text-gray-500">
			Personalized spatial audio with dinamic head tracking places sound around you
		</div>
		<hr>
		<div class="bg-white h-14 flex items-center">
			<footer class="container max-w-6xl mx-auto text-sm text-gray-500">
				Apple Inc 2024
			</footer>
		</div>
		<slot />
	</body
</html>

